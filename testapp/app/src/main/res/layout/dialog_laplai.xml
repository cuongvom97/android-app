<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Không có"
            android:textSize="16dp"
            android:textColor="@color/blue_grey_800"
            android:id="@+id/themcv_laplai0"
            android:paddingTop="3dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hàng ngày"
            android:textSize="16dp"
            android:textColor="@color/blue_grey_800"
            android:id="@+id/themcv_laplaingay"
            android:paddingTop="3dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hàng tuần"
            android:textSize="16dp"
            android:textColor="@color/blue_grey_800"
            android:id="@+id/themcv_laplaituan"
            android:paddingTop="3dp"/>
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2 tuần 1 lần"
            android:textSize="16dp"
            android:textColor="@color/blue_grey_800"
            android:id="@+id/themcv_laplai2tuan1lan"
            android:paddingTop="3dp"/>
        <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hàng tháng"
        android:textSize="16dp"
        android:textColor="@color/blue_grey_800"
        android:id="@+id/themcv_laplaithang"
        android:paddingTop="3dp"/>
    </RadioGroup>

</LinearLayout>
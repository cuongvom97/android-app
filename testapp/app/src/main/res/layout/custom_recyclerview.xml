<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="3"
    android:id="@+id/layout_recyclerview"
    android:gravity="center"
    android:layout_margin="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/custom_recyclerview_tieude"
            android:text="Tiêu đề 1"
            android:textSize="23dp"
            android:textColor="@color/blue_grey_900"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhãn"
            android:textColor="@color/colortieude"
            android:textSize="23dp"
            android:layout_weight="3"
            android:id="@+id/custom_recyclerview_nhan"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Giờ bắt đầu"
                android:textColor="@color/blue_grey_800"
                android:id="@+id/custom_recyclerview_gio"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Giò hoàn thành"
                android:textColor="@color/blue_grey_800"
                android:id="@+id/custom_recyclerview_ngay"
                android:gravity="center"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blue_grey_800"
            android:textSize="16dp"
            android:text="Ghi chú"
            android:id="@+id/custome_recyclerview_ghichu"/>
    </LinearLayout>

</LinearLayout>